<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">

    <!-- trang thai khi click -->
    <shape>

        <corners
            android:radius="10dp">
        </corners>

        <gradient
            android:startColor="#ff0000"
            android:endColor="#ffff00"
            android:angle="270">
        </gradient>

        <stroke
            android:width="3dp"
            android:color="#14f0e1">

        </stroke>

        <padding
            android:bottom="10dp"
            android:left="10dp"
            android:right="10dp"
            android:top="10dp">
        </padding>

    </shape>

</item>

    <item >
        <shape>

            <solid android:color="#e85e13" />
            <corners
                android:radius="10dp">
            </corners>
            <stroke
                android:width="3dp"
                android:color="#14f0e1">
            </stroke>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp">
            </padding>
        </shape>
    </item>

</selector>